{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "node",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"jsx": "react-jsx",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"allowJs": false,
		"baseUrl": "./src",
		"paths": {
			"@api/*": ["api/*"],
			"@assets/*": ["assets/*"],
			"@components/*": ["components/*"],
			"@pages/*": ["pages/*"],
			"@store/*": ["store/*"],
			"@styles/*": ["styles/*"],
			"@types/*": ["types/*"],
			"@utils/*": ["utils/*"],
			"@HOC/*": ["HOC/*"],
		},
		"include": [
			"src/**/*"
		]
	}
}
